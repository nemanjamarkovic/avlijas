<?xml version="1.0" encoding="UTF-8"?>
<!-- IIS Configuration for Windows Servers -->
<configuration>
    <system.webServer>
        <!-- HTTP to HTTPS Redirect -->
        <rewrite>
            <rules>
                <rule name="HTTP to HTTPS redirect" stopProcessing="true">
                    <match url="(.*)" />
                    <conditions>
                        <add input="{HTTPS}" pattern="off" ignoreCase="true" />
                    </conditions>
                    <action type="Redirect" url="https://{HTTP_HOST}/{R:1}" redirectType="Permanent" />
                </rule>
            </rules>
        </rewrite>
        
        <!-- Security Headers -->
        <httpProtocol>
            <customHeaders>
                <!-- HSTS Header: Force HTTPS for 1 year including subdomains -->
                <add name="Strict-Transport-Security" value="max-age=31536000; includeSubDomains; preload" />
                
                <!-- Prevent MIME type sniffing -->
                <add name="X-Content-Type-Options" value="nosniff" />
                
                <!-- Enable XSS Protection -->
                <add name="X-XSS-Protection" value="1; mode=block" />
                
                <!-- Prevent clickjacking -->
                <add name="X-Frame-Options" value="SAMEORIGIN" />
                
                <!-- Referrer Policy -->
                <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />
                
                <!-- Permissions Policy -->
                <add name="Permissions-Policy" value="geolocation=(), microphone=(), camera=()" />
            </customHeaders>
        </httpProtocol>
        
        <!-- Cache Control for Static Assets -->
        <staticContent>
            <!-- Images - Cache for 1 year -->
            <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="365.00:00:00" />
        </staticContent>
        
        <!-- URL Rewrite Rules for Cache Headers -->
        <rewrite>
            <outboundRules>
                <!-- Images - Cache for 1 year -->
                <rule name="Cache Images" preCondition="IsImage">
                    <match serverVariable="RESPONSE_Cache_Control" pattern=".*" />
                    <action type="Rewrite" value="public, max-age=31536000, immutable" />
                </rule>
                <preConditions>
                    <preCondition name="IsImage">
                        <add input="{REQUEST_FILENAME}" pattern="\.(jpg|jpeg|png|gif|webp|svg|ico)$" />
                    </preCondition>
                </preConditions>
                
                <!-- CSS and JavaScript - Cache for 1 year -->
                <rule name="Cache CSS/JS" preCondition="IsCSSOrJS">
                    <match serverVariable="RESPONSE_Cache_Control" pattern=".*" />
                    <action type="Rewrite" value="public, max-age=31536000, immutable" />
                </rule>
                <preConditions>
                    <preCondition name="IsCSSOrJS">
                        <add input="{REQUEST_FILENAME}" pattern="\.(css|js)$" />
                    </preCondition>
                </preConditions>
                
                <!-- Fonts - Cache for 1 year -->
                <rule name="Cache Fonts" preCondition="IsFont">
                    <match serverVariable="RESPONSE_Cache_Control" pattern=".*" />
                    <action type="Rewrite" value="public, max-age=31536000, immutable" />
                </rule>
                <preConditions>
                    <preCondition name="IsFont">
                        <add input="{REQUEST_FILENAME}" pattern="\.(woff|woff2|ttf|otf|eot)$" />
                    </preCondition>
                </preConditions>
                
                <!-- HTML - No cache -->
                <rule name="No Cache HTML" preCondition="IsHTML">
                    <match serverVariable="RESPONSE_Cache_Control" pattern=".*" />
                    <action type="Rewrite" value="no-cache, no-store, must-revalidate" />
                </rule>
                <preConditions>
                    <preCondition name="IsHTML">
                        <add input="{REQUEST_FILENAME}" pattern="\.(html|htm)$" />
                    </preCondition>
                </preConditions>
            </outboundRules>
        </rewrite>
    </system.webServer>
</configuration>





